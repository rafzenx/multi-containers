{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "rafzenx/multi-client",
            "hostname": "client",
            "essential": false
        },
        
        {
            "name": "server",
            "image": "rafzenx/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rafzenx/multi-worker",            
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rafzenx/multi-nginx",            
            "essential": true,
            "portMappings" : [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]

}